@model gcs.erp.web.VM.Login.LoginVM
 
<h2>Login</h2>


<form asp-controller="Login" asp-action="Index" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Usuario" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Usuario" class="form-control" />
            <span asp-validation-for="Usuario" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Senha" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Enviar" class="btn btn-default" />
        </div>
    </div>
</form>